<!DOCTYPE html>
<html>
  <head>
    <title>RecipeApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <header>
      <div class="nav-links">
        <%= link_to "Public Recipies", id: "Home_btn" %>
        <%= link_to "Foods", foods_path, id: "Home_btn" %>
        <%= link_to "Recipies", id: "Home_btn" %>
      </div>
        <div class="current_user_wrapper">
          <div class="current_user_options">
            <%= button_to "Logout", foods_path, method: :delete, id: "log_out_btn", class: "bg-red-800 text" %>
          </div>
        </div>
        <%= link_to "Login", id: "log_in_btn" %>
  </header>

    <%= yield %>
  </body>
</html>
