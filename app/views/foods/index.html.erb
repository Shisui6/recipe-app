<p style="color: green"><%= notice %></p>

<%= link_to "Add Food", new_food_path %>

<h1>Foods:</h1>

<div id="foods">
<table>
  <thead>
    <tr>
      <td>Food</td>
      <td>Measurement Unit</td>
      <td>Unit Price</td>
      <td>Action</td>
    </tr>
  </thead>
  <tbody>
    <% @foods.each do |food| %>
      <%= render food %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.measurement_unit %></td>
        <td><%= food.unit_price %></td>
        <td><%= button_to "Delete", food_path(food), method: :delete %></td>
    </tr>
  </tbody>
  <% end %>
</table>
</div>
