<div class="shopping-wrapper">
  <h2>Shopping List:</h2>
  <% if @list.empty? %>
    <p>There are no foods added in recipes.</p>
  <% else %>
    <div id="foods">
      <table>
          <tr>
            <th>Food</th>
            <th>Quantity</th>
            <th>Unit Price</th>
          </tr>
          <% @list.each do |food| %>
            <tr>
              <td><%= food['name'] %></td>
              <td><%= food['quantity'] %></td>
              <td>$ <%= food['price'] %></td>
          </tr>
        <% end %>
      </table>
      </div>
  <% end %>
</div>